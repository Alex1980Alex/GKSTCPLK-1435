	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ТочкаМаршрута", "ID_PLK", 1, "ПКС_ТочкаМаршрута");
	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ИдентификаторОтправки", "ИдентификаторОтправки");
	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ТипОперации", "OperType", 1, "ПКС_ТипОперацииСВагоном");
	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "Дата", "WeightGrossDate", 1, "ПКС_ДатаДокумента");
	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "Груженый", "IsLoaded");
    гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "Весы", "ScaleId", 1, "ПКС_Весы");
    гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ВесТары", "WeightTara");
    гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ДатаТары", "WeightTaraDate");
    гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ВесБрутто", "WeightGross");
	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ДатаБрутто", "WeightGrossDate");	
	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ГрузНаименование", "GoodName");
	гкс_ИнтеграцияСРПВ.ДобавитьПКС(ПравилаКонвертации, "ГрузИдентификатор", "GoodId");
	
	Возврат ПравилаКонвертации;
		
КонецФункции

// Обработчик формирования данных для заполнения документа. Вызывается из гкс_ИнтеграцияСРПВ
//
// Параметры:
//  ПравилоКонвертации - СтрокаТаблицыЗначений - определяет текущие правило заполнения.
//  ПолученныеДанные - Структура - структура с полученными данными.
//  ДанныеЗаполнения - Структура - итоговая структура данных для заполнения.
//
Процедура ВыполнитьПроцедуруОбработчикаЗаполнения(ПравилоКонвертации, ПолученныеДанные, ДанныеЗаполнения) Экспорт
	
	ЗначениеЗаполнения = Неопределено;
	ПолученноеЗначение = Неопределено;
	Если ПолученныеДанные.Свойство(ПравилоКонвертации.СвойствоИсточника) Тогда
		ПолученноеЗначение = ПолученныеДанные[ПравилоКонвертации.СвойствоИсточника];
	КонецЕсли;
	
	Если ПравилоКонвертации.ПравилоКонвертацииСвойства = "ПКС_ТипОперацииСВагоном" Тогда 
		ПКС_ТипОперацииСВагоном(ПолученноеЗначение, ПолученныеДанные, ЗначениеЗаполнения);
		
	ИначеЕсли ПравилоКонвертации.ПравилоКонвертацииСвойства = "ПКС_ДатаДокумента" Тогда 
		ПКС_ДатаДокумента(ПолученноеЗначение, ПолученныеДанные, ЗначениеЗаполнения);
		
	ИначеЕсли ПравилоКонвертации.ПравилоКонвертацииСвойства = "ПКС_Весы" Тогда 
		ПКС_Весы(ПолученноеЗначение, ПолученныеДанные, ЗначениеЗаполнения);
		
	ИначеЕсли ПравилоКонвертации.ПравилоКонвертацииСвойства = "ПКС_ТочкаМаршрута" Тогда 
		ПКС_ТочкаМаршрута(ПолученноеЗначение, ПолученныеДанные, ЗначениеЗаполнения);	
		
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ЗначениеЗаполнения) Тогда
		ДанныеЗаполнения.Вставить(ПравилоКонвертации.СвойствоКонфигурации, ЗначениеЗаполнения);
	КонецЕсли;
	
КонецПроцедуры

